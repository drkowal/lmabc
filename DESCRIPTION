Package: lmabc
Title: Linear Regression with Abudance Based Constraints
Version: 0.0.0.9000
Authors@R: 
    c(person(given = "Daniel R.", family = "Kowal", email = "daniel.r.kowal@gmail.com", role = c("aut", "cre")),
      person(given = "Prayag", family = "Gordy", role = c("aut")),
